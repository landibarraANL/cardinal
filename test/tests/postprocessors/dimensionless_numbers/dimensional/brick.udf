void UDF_Setup(nrs_t *nrs)
{
  auto mesh = nrs->cds->mesh[0];
  int n_gll_points = mesh->Np * mesh->Nelements;
  for (int n = 0; n < n_gll_points; ++n)
  {
    nrs->U[n + 0 * nrs->fieldOffset] = 0.0;       // x-velocity
    nrs->U[n + 1 * nrs->fieldOffset] = 0.0;       // y-velocity
    nrs->U[n + 2 * nrs->fieldOffset] = 0.001;     // z-velocity

    nrs->P[n] = 0.0; // pressure
  }

  // we need this here if the temperature solve is off, because otherwise it's not set
  platform->options.setArgs("SCALAR00 DENSITY", "1001400");
  platform->options.setArgs("SCALAR00 DIFFUSIVITY", "2.34");
}

