[OCCA]
  backend = CPU

[GENERAL]
  stopAt = numSteps
  numSteps = 10
  dt = 0.5
  polynomialOrder = 3
  writeControl = steps
  writeInterval = 2

[MESH]
  file = "../../nek_mesh/first_order/pyramid.re2"

[VELOCITY]
  solver = none
  viscosity = 1.0
  density = 1.0
  residualTol = 1.0e-6
  boundaryTypeMap = inlet, outlet, wall, wall, wall, wall, wall, wall

[PRESSURE]
  residualTol = 1.0e-5

[TEMPERATURE]
  residualTol = 1.0e-5
  boundaryTypeMap = f, f, f, f, t, t, I, I
